{
  "private": true,
  "name": "timetracker",
  "description": "Timetracker app",
  "version": "1.0.39",
  "author": "mmmykhailo <mmmykhailo@proton.me>",
  "main": "app/background.js",
  "scripts": {
    "test": "jest --coverage",
    "dev": "nextron",
    "build": "nextron build",
    "postinstall": "electron-builder install-app-deps",
    "dist": "electron-builder",
    "dist-win": "electron-builder --win",
    "dist-macos": "electron-builder  --macos",
    "build-client": "run-script-os",
    "build-client:win32": "electron-builder --win",
    "build-client:darwin": "npm list -g dmg-license || sudo npm i -g dmg-license && electron-builder --mac"
  },
  "repository": "https://github.com/ukad-group/timetracker-desktop-client",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "build": {
    "appId": "com.timetracker.autoupdater",
    "productName": "Timetracker",
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "win": {
      "target": "nsis"
    },
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": "dmg"
    }
  },
  "dependencies": {
    "@fullcalendar/core": "^6.1.8",
    "@fullcalendar/daygrid": "^6.1.8",
    "@fullcalendar/interaction": "^6.1.8",
    "@fullcalendar/react": "^6.1.8",
    "@headlessui/react": "^1.7.14",
    "@heroicons/react": "^2.0.18",
    "@tailwindcss/forms": "^0.5.3",
    "clsx": "^1.2.1",
    "electron-serve": "^1.1.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.1",
    "zustand": "^4.3.9"
  },
  "devDependencies": {
    "@babel/core": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.11",
    "@testing-library/jest-dom": "^6.1.2",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.3",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "autoprefixer": "^10.4.7",
    "electron": "^21.3.3",
    "electron-builder": "^23.6.0",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.4",
    "next": "^12.3.4",
    "nextron": "^8.5.0",
    "postcss": "^8.4.13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "run-script-os": "^1.1.6",
    "tailwindcss": "^3.1.8",
    "ts-jest": "^29.1.1",
    "typescript": "^4.9.4"
  }
}

{
  "private": true,
  "name": "timetracker",
  "description": "Timetracker app",
  "version": "1.47.0-beta.5",
  "author": "mmmykhailo <mmmykhailo@proton.me>",
  "main": "main/index.js",
  "scripts": {
    "test": "jest --coverage",
    "clean": "rimraf dist main renderer/out renderer/.next",
    "postinstall": "electron-builder install-app-deps",
    "dev": "npm run build-electron && electron .",
    "build-renderer": "next build renderer",
    "build-electron": "tsc -p electron-src",
    "build": "npm run build-renderer && npm run build-electron",
    "pack-app": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist-win": "npm run build && electron-builder --win",
    "dist-macos": "npm run build && electron-builder  --macos",
    "build-client": "run-script-os",
    "build-client:win32": "electron-builder --win",
    "build-client:darwin": "npm list -g dmg-license || sudo npm i -g dmg-license && electron-builder --mac",
    "type-check": "tsc -p ./renderer/tsconfig.json && tsc -p ./electron-src/tsconfig.json"
  },
  "repository": "https://github.com/ukad-group/timetracker-desktop-client",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "build": {
    "appId": "com.timetracker.autoupdater",
    "productName": "Timetracker",
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "asar": true,
    "files": [
      "main",
      "renderer"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "app/images/logo.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "app/images/logo.png"
    },
    "linux": {
      "icon": "app/images/logo.png"
    }
  },
  "dependencies": {
    "@aptabase/electron": "^0.2.2",
    "@azure/msal-browser": "^3.2.0",
    "@azure/msal-react": "^2.0.4",
    "@fullcalendar/core": "^6.1.8",
    "@fullcalendar/daygrid": "^6.1.8",
    "@fullcalendar/interaction": "^6.1.8",
    "@fullcalendar/react": "^6.1.8",
    "@headlessui/react": "^1.7.14",
    "@heroicons/react": "^2.0.18",
    "@tailwindcss/forms": "^0.5.3",
    "clsx": "^1.2.1",
    "dotenv": "^16.3.1",
    "electron-is-dev": "^1.1.0",
    "electron-next": "^3.1.5",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.1",
    "functions-have-names": "^1.2.3",
    "next": "^13.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.3.9"
  },
  "devDependencies": {
    "@babel/core": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.11",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.3",
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.9",
    "@types/react-dom": "^16.9.9",
    "autoprefixer": "^10.4.16",
    "electron": "^26.2.2",
    "electron-builder": "^23.0.3",
    "jest": "^29.6.2",
    "jest-date-mock": "^1.0.8",
    "jest-environment-jsdom": "^29.6.4",
    "postcss": "^8.4.30",
    "react-test-renderer": "^18.2.0",
    "rimraf": "^3.0.0",
    "run-script-os": "^1.1.6",
    "tailwindcss": "^3.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^4.0.5"
  }
}
